<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="9dp"
            android:text="Accèder à la map"
            android:drawableLeft="@drawable/ic_room_black_24dp"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:onClick="accesMap" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="9dp"
            android:text="Filtrage des markers"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:onClick="accesFilter" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="9dp"
            android:text="Paramètres"
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:onClick="accesSettings"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="9dp"
            android:text="Quitter l'application"
            android:drawableLeft="@android:drawable/ic_lock_power_off"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:onClick="quitApp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:text="Version 1.0"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:background="@color/colorBackground" />

</RelativeLayout>
